<article class="auth-container" id="guest_checkout">
  <h1><%= I18n.t('spree.guest_user_account') %></h1>

  <%= form_for @order,
    url: update_checkout_registration_path,
    method: :put,
    html: { class: "auth-form", id: "checkout_form_registration" } do |f|
  %>
    <div class="auth-form__input-wrapper">
      <%= render(
        "spree/components/forms/inputs/text",
        id: :spree_user_email,
        label: I18n.t("spree.email"),
        name: 'order[email]',
        placeholder: "name@example.com",
        type: :email
      ) %>
    </div>

    <div class="auth-form__input-wrapper">
      <%= render(
        "spree/components/buttons/button_primary",
        content: I18n.t("spree.continue"),
        full_width: true,
        name: :commit,
        type: :submit
      ) %>
    </div>

    <%= I18n.t("spree.or") %> <%= link_to I18n.t("spree.create_a_new_account"), spree.signup_path %>
  <% end %>
</article>
